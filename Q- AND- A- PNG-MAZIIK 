# Loop through each question
for qa in qa_list:
    attempts = 0
    correct = False

    while attempts < 3:
        # Ask the question
        user_answer = input(qa["question"] + " ").strip().lower()
        
        if user_answer == qa["answer"]:
            print("CORRECT ✅")
            correct = True
            break
        else:
            attempts += 1
            if attempts < 3:
                print("SORRY TRY AGAIN ❌")

    # If not correct after 3 attempts
    if not correct:
        print("SORRY PLEASE TRY AGAIN ❌")
        print("The correct answer is:", qa["answer"].title())

    print("-" * 40)  # Separator before next question